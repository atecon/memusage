set verbose off
clear

include "./src/memusage.inp" --force
include assertion.gfn

nulldata 3
series x = normal()
series y = normal()
list L = y x

function void test_memusage (const list L)
    print "Start memusage()"

    scalar memory_usage = (nelem(L) * nobs(L[1]) * 8) / 1024 / 1024
    assert_equal_num(memusage(defbundle("L", L)), memory_usage)

    scalar memory_usage = (1 * nobs(L[1]) * 8) / 1024 / 1024
    assert_equal_num(memusage(defbundle("y", L[1])), memory_usage)

    scalar memory_usage = (nelem(L) * nobs(L[1]) * 8) / 1024 / 1024
    assert_equal_num(memusage(defbundle("M", {L})), memory_usage)

    string s = "some string!"
    scalar memory_usage = (strlen(s) * 8) / 1024 / 1024
    assert_equal_num(memusage(defbundle("s", s)), memory_usage)

    matrices M = defarray({L[1]}, {L[2]})
    scalar memory_usage = (nelem(L) * nobs(L[1]) * 8) / 1024 / 1024
    assert_equal_num(memusage(defbundle("M", M)), memory_usage)
end function
test_memusage(L)

