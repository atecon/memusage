function void test_memusage_bundle (const list L)
    print "Start memusage_bundle()"

    scalar memory_usage = (nelem({L}) * 8) / 1024 / 1024
    memory_usage += (nelem({L[1]}) * 8) / 1024 / 1024
    memory_usage += (nelem({L}) * 8) / 1024 / 1024
    string s = "some string!"
    memory_usage += (strlen(s) * 8) / 1024 / 1024

    bundle b = defbundle("L", L, "L1", L[1], "m", {L}, "s", s)
    assert_equal_num(memusage_bundle(b), memory_usage)
end function
test_memusage_bundle(L)


